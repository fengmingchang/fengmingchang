# include <stdio.h>
 int main ( int  argy , const char *argv[])
{
    int ncounline;
    int i;

    printf (" please  input :\n");
    scanf ("%d",&ncounline);
    for ( i = 1; i <= ncounline; i ++)
        for ( int j = 0;j <ncounline; j ++)
            printf (" ");
         for( int k = 0;k = 2 * i -1;k ++)
             printf("*");
         printf ("\n");

    return 0;
}
