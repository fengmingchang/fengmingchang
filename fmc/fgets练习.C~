 printf("                4.学生信息的删除 \n                   ");
 printf("                5.学生信息的退出  \n                  ");
 printf("                1.学生信息的录入  \n                  ");
 printf("请选择:(0-5)\n");
 int num;
 scanf("%d",num);
 switch (num)
 {
   case 1.
       input();
       break;
   case 2.
       chaxun();
       break;
   case 3.
       xiugai();
       break    
   case 4.
       dele();
       break;
   case 5.
       tuichu();
   default:
       jiemian();   

 }
 return 0;
}



